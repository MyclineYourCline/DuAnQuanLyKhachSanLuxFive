<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/dialog_update_nhan_vien_img"
        android:src="@drawable/img_back_dialog_update_nhanvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/dialog_update_nhan_vien_img_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_arrow_back" />

    <ImageView
        android:id="@+id/dialog_update_nhan_vien_avata"
        android:src="@drawable/user"
        android:layout_below="@id/dialog_update_nhan_vien_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_update_nhan_vien_textInput_manv"
        android:layout_below="@id/dialog_update_nhan_vien_avata"
        android:layout_margin="15sp"
        app:startIconDrawable="@drawable/baseline_person"
        app:endIconMode="clear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_nhan_vien_Edt_manv"
            android:hint="Mã Nhân viên"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_update_nhan_vien_textInput_sdt"
        android:layout_below="@id/dialog_update_nhan_vien_textInput_manv"
        android:layout_margin="20sp"
        app:startIconDrawable="@drawable/baseline_local_phone"
        app:endIconMode="clear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_nhan_vien_Edt_sdt"
            android:hint="Sđt Nhân viên"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_update_nhan_vien_textInput_matkhau"
        android:layout_below="@id/dialog_update_nhan_vien_textInput_sdt"
        android:layout_margin="20sp"
        app:startIconDrawable="@drawable/baseline_password"
        app:endIconMode="password_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_nhan_vien_Edt_matkhau"
            android:inputType="textPassword"
            android:hint=" Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_update_nhan_vien_textInput_matkhauMoi"
        android:layout_below="@id/dialog_update_nhan_vien_textInput_matkhau"
        android:layout_margin="20sp"
        app:startIconDrawable="@drawable/baseline_password"
        app:endIconMode="password_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_update_nhan_vien_Edt_matkhauMoi"
            android:inputType="textPassword"
            android:hint=" Mật khẩu Mới"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

   <Button

       android:text="Sửa"
       android:layout_alignParentStart="true"
       android:layout_marginLeft="30dp"
       android:backgroundTint="@color/teal_700"
       android:layout_below="@id/dialog_update_nhan_vien_textInput_matkhauMoi"
       android:layout_width="100dp"
       android:layout_height="wrap_content"/>

    <Button

        android:text="Xóa"
        android:backgroundTint="@color/red"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/dialog_update_nhan_vien_textInput_matkhauMoi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>