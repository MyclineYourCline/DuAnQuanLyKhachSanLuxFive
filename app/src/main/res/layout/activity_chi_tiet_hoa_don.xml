<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hoa_don_icon"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="20dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >
            <TableRow
                android:weightSum="3"
                android:padding="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avata_khach_hang"
                    />
                <TextView android:text=":"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_tenKh"
                    android:layout_marginStart="15dp"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="nguyễn trần khả " />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Người tạo"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />
                <TextView android:text=":"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_nguoiTao"
                    android:layout_weight="2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="dsdsds" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Phòng Thuê"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpUsage" />
                <TextView android:text=":"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,SpUsage" />
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_tenPhong"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage"
                    android:text="Nam" />
            </TableRow>
            <!--cột ngày đặt -->
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Ngày Đặt"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpUsage" />
                <TextView android:text=":"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,SpUsage" />
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_ngayDat"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:text="Nam" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Tổng số giờ"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpUsage" />
                <TextView android:text=":"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,SpUsage" />
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_tongSoGio"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:text="Nam" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="Ngày Trả"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpUsage" />
                <TextView android:text=":"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,SpUsage" />
                <TextView
                    android:id="@+id/activity_chi_tiet_hoa_don_ngayTra"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage"
                    android:text="Nam" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:weightSum="4"
                android:padding="5dp">
                <TextView
                    android:layout_weight="0.5"
                    android:text="Tên"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpUsage" />
                <TextView android:text="SL"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,SpUsage" />
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:text="tổng tiền" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_chi_tiet_hoa_don_lv_chiTietDV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/activity_chi_tiet_hoa_don_tongTien"
        android:layout_below="@+id/card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_tongtiern"
        android:layout_width="wrap_content"
        android:text="Tổng tiền :"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/activity_chi_tiet_hoa_don_tongTien"
        android:layout_width="wrap_content"
        android:text="20000vnd"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tv_tongtiern"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_chi_tiet_hoa_don_btn_sua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginRight="50dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_edit_note_24" />
</RelativeLayout>